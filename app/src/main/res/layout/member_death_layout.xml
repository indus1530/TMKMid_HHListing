<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.tmkmid_hhlisting_app.activities.ui.FamilyListingActivity" />

        <variable
            name="member"
            type="edu.aku.hassannaqvi.tmkmid_hhlisting_app.otherClasses.models.Members" />
    </data>


    <LinearLayout
        android:id="@+id/fldGrpSecMDL"
        style="@style/vlinearlayout"
        android:layout_margin="20dp"
        android:background="@drawable/background_border"
        android:layoutDirection="rtl">

        <androidx.cardview.widget.CardView
            android:id="@+id/hh1901cv"
            style="@style/cardView">

            <LinearLayout style="@style/vlinearlayout">

                <TextView
                    style="@style/i_textview"
                    android:text="@string/hh1901" />

                <RadioGroup
                    android:id="@+id/hh1901"
                    style="@style/hradiogroup">

                    <RadioButton
                        android:id="@+id/hh1901a"
                        style="@style/radiobutton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/hh1901a" />

                    <RadioButton
                        android:id="@+id/hh1901b"
                        style="@style/radiobutton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/hh1901b" />

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/hh1902cv"
            style="@style/cardView">

            <LinearLayout style="@style/vlinearlayout">

                <TextView
                    style="@style/i_textview"
                    android:text="@string/hh1902" />

                <LinearLayout
                    android:id="@+id/fldGrpCVcb03"
                    style="@style/linearlayout_view_wt_bound"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textView3Head"
                            android:text="@string/hh1902yy" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/hh1902yy"
                            style="@style/EditTextNum"
                            android:hint="@string/hh1902yy"
                            android:maxLength="1"
                            app:maxValue="4"
                            app:minValue="0"
                            app:type="range" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textView3Head"
                            android:text="@string/hh1902mm" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/hh1902mm"
                            style="@style/EditTextNum"
                            android:hint="@string/hh1902mm"
                            android:maxLength="2"
                            app:maxValue="11"
                            app:minValue="0"
                            app:type="range" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textView3Head"
                            android:text="@string/hh1902dd" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/hh1902dd"
                            style="@style/EditTextNum"
                            android:hint="@string/hh1902dd"
                            android:maxLength="2"
                            app:defaultValue="98"
                            app:maxValue="30"
                            app:minValue="0"
                            app:type="range" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>